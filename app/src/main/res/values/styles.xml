<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="caffeine" parent="android:Theme.Material" >
        <item name="android:colorPrimary">@color/MyCol</item>
        <item name="android:colorPrimaryDark">@color/MyCol</item>
        <item name="android:colorBackground">@color/MyCol</item>
        <item name="android:colorForeground">@color/MyCol</item>
        <item name="android:navigationBarColor">@color/MyCol</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
